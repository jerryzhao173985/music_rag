# Music RAG Configuration

# Application
APP_NAME=Music RAG
ENVIRONMENT=development
DEBUG=false

# Database
CHROMADB_PATH=./data/chromadb
# For remote ChromaDB:
# CHROMADB_HOST=localhost
# CHROMADB_PORT=8000

# Embeddings
TEXT_MODEL=all-MiniLM-L6-v2
AUDIO_SAMPLE_RATE=22050
AUDIO_N_MFCC=40

# Retrieval
DEFAULT_TOP_K=10
DEFAULT_SEMANTIC_WEIGHT=0.7

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
# Uncomment to enable API key authentication:
# API_KEY=your-secret-api-key-here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance
MAX_BATCH_SIZE=100
CACHE_ENABLED=false
CACHE_TTL=3600
